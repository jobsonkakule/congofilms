{% extends "base.html.twig" %}
{% block title 'Se connecter | Grands Lacs News' %}

{% block body %}

    <div class="container mt-4">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey | trans(error.messagedata, 'security')}}
            </div>
        {% endif %}
        <form class="form-signin" action="{{ path('login') }}" method="post">
            <div class="text-center mb-4">
              <img src="/images/logo.png" alt="Grands Lacs News" title="Grands Lacs News" style="width: 80%;">
              <h1 class="h3 mb-3 font-weight-bold">Se connecter </h1>
              <p>Veullez entrer vos identifiants pour vous connecter : </p>
            </div>
          
            <div class="form-label-group">
              <input type="text" id="username" name="_username" class="form-control" placeholder="Nom d'utlisateur" value="{{ last_username }}" required autofocus>
              <label for="username">Nom d'utilisateur</label>
            </div>
          
            <div class="form-label-group">
              <input type="password" id="password" name="_password" class="form-control" placeholder="Mot de passe" required>
              <label for="password">Mot de passe</label>
            </div>
          
            <div class="checkbox mb-3">
              <label>
                <input type="checkbox" value="remember-me"> Se souvenir de moi
              </label>
            </div>
            <p class="text-center"><a href="{{ path('auth.password') }}">Mot de passe oublié ?</a> ou <a href="{{ path('signup') }}">Créer un compte</a></p>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Se connecter</button>
            <p class="mt-5 mb-3 text-muted text-center">
              {% set year = "now"|date("Y") %}
              &copy;G-L&#9865;News, {{ year }}-{{ year + 1 }}
            </p>
        </form>
    </div>

{% endblock  %}