{% extends "base.html.twig" %}

{% block title post.title %}
    
{% block body %}
    <div class="container">
        <div class="crumb">
            <span>
            <a href="{{ path('home') }}">Accueil</a>
            </span>
            <i class="fas fa-chevron-right"></i>
            <span>
            <a href="">{{ post.category.title }}</a>
            </span>
            <i class="fas fa-chevron-right"></i>
            <span>
            <a href="">RDC</a>
            </span>
            <i class="fas fa-chevron-right"></i>
            <span>
            <a href="">{{ post.title }}</a>
            </span>
        </div>
        <div class="row">
            <div class="col-md-8">
            <div class="post-header">
                <ul class="category">
                    <li><a href="">{{ post.category.title }}</a></li>
                    <li><a href="">RDC</a></li>
                </ul>
                <div class="post-title">
                    <h1>{{ post.title }}</h1>
                    <div class="post-info">
                        <div class="post-author">
                        Par <a href="">Job Kakule</a> - 
                        </div>
                        <span class="post-date">{{ post.createdAt | date("d F, Y") }}</span>
                        <div class="post-stat">
                        <a href="#comments">
                            <i class="fas fa-comments"></i>
                            177
                        </a>
                        </div>
                        <div class="post-stat">
                        <i class="fas fa-eye"></i>
                        {{ post.views }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="sharing-post">
                <span><i class="fas fa-share-alt"></i></span>
                <a href="">
                <div class="share-icon">
                    <i class="fab fa-facebook-f"></i>
                </div>
                <div class="share-text">
                    Facebook
                </div>
                </a>
                <a href="">
                <div class="share-icon" style="background: #29c5f6">
                    <i class="fab fa-twitter"></i>
                </div>
                <div class="share-text" style="background: #29c5f6">
                    Twitter
                </div>
                </a>
                <a href="">
                <div class="share-icon" style="background: #7bbf6a">
                    <i class="fab fa-whatsapp"></i>
                </div>
                <div class="share-text" style="background: #7bbf6a">
                    Whatsapp
                </div>
                </a>
            </div>
            <div class="post-content">
                <div class="post-featured-img">
                    {% if post.pictures is not empty %}
                        {% for picture in post.pictures %}
                            <img src="{{ vich_uploader_asset(picture, 'imageFile') | imagine_filter('large') }}" alt="" title="{{ post.title }}">
                        {% endfor %}
                    {% endif %}
                </div>
                    {{ post.content | nl2br }}
                <hr>
                <div class="sharing-post sharing-bottom">
                <a href="">
                    <div class="share-icon" style="background: #1b2e3f">
                        <i class="far fa-thumbs-up"></i>
                        <span>1205</span>
                    </div>
                </a>
                &nbsp;
                et
                &nbsp;
                <span><i class="fas fa-share-alt"></i></span>
                <a href="">
                    <div class="share-icon">
                    <i class="fab fa-facebook-f"></i>
                    </div>
                </a>
                <a href="">
                    <div class="share-icon" style="background: #29c5f6">
                    <i class="fab fa-twitter"></i>
                    </div>
                </a>
                <a href="">
                    <div class="share-icon" style="background: #7bbf6a">
                    <i class="fab fa-whatsapp"></i>
                    </div>
                </a>
                ou
                <a href="#comments">
                    <div class="share-icon" style="background: #1b2e3f; color:#FFF;">
                    <i class="far fa-comment"></i>
                    </div>
                </a>
                </div>
                <hr>
                <div class="cat-high-toggle">
                <h6>
                    <a href="" class="toggle-item cat-high-selected">articles associés</a>
                    <a href="" class="toggle-item">Plus de l'auteur</a>
                </h6>
                </div>
                <div class="row last-articles">
                    {% for post in posts | slice(1, 3) %}
                        <div class="col-md-4 last-art-item">
                            <div class="cat-post-img">
                                <a href="">
                                    {% if post.picture %}
                                        <img src="{{ vich_uploader_asset(post.picture, 'imageFile') | imagine_filter('thumb') }}" alt="" title="{{ post.title }}">
                                    {% else %}
                                        <img src="{{ '/images/noimage.png'| imagine_filter('thumb') }}" title="{{ post.title }}"></a>
                                    {% endif %}
                                <a href="" class="item-cat">{{ post.category.title }}</a>
                            </div>
                            <div class="cat-post-body">
                                <a href=""><h6>{{ post.title }}</h6></a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div id="comments">
                    <br>
                    <div class="cat-high-title social-panel-title">
                        <h6>177 Commentaires</h6>
                    </div>
                    <div class="comment-section">
                        <form action="" method="post" id="comment">
                        <div class="row">
                            <div class="col-md-6">
                                <input class="form-control" type="text" name="name" placeholder="Nom">
                            </div>
                            <div class="col-md-6">
                                <input class="form-control" type="email" name="email" placeholder="Email">
                            </div>
                            <div class="col-md-12">
                                <textarea class="form-control" name="content" id="" cols="30" rows="5" placeholder="Votre commentaire ici..."></textarea>
                            </div>
                            <input type="hidden" value="0">
                        </div>
                        <button class="btn btn-info" type="submit">Envoyer</button>
                        </form>
                    </div>
                </div>
            </div>
            </div>
            <div class="col-md-4 article-reminder">
            <div style="width: 100%; height: 200px; background:gray;text-align:center;color:#FFF;">
                Publicité
            </div>
            <br>
            <div class="cat-high-title social-panel-title">
                <h6>à ne pas manquer</h6>
            </div>
            <div class="cat-post-details">
                <div class="cat-post-img">
                    {% set topPost = posts.0 %}
                    <a href="{{ path('post.show', {id: topPost.id, slug: topPost.slug}) }}">
                        {% if topPost.picture %}
                            <img src="{{ vich_uploader_asset(topPost.picture, 'imageFile') | imagine_filter('medium') }}" alt="" title="{{ topPost.title }}">
                        {% else %}
                            <img src="{{ '/images/noimage.png'| imagine_filter('thumb') }}" title="{{ topPost.title }}"></a>
                        {% endif %}
                    </a>
                    <a href="" class="item-cat">{{ topPost.category.title }}</a>
                </div>
                <div class="cat-post-body">
                <a href="{{ path('post.show', {id: topPost.id, slug: topPost.slug}) }}"><h5>Amazon’s Apple Watch killer will be free and sell you everything</h5></a>
                <div class="cat-post-infos">
                    <span class="td-post-author-name"><a href="">John Doe</a> <span>-</span> </span>
                    <span class="td-post-date">{{ topPost.createdAt | date("d F, Y") }}</span>
                    <div class="td-module-comments"><a href="">0</a></div>
                </div>
                <div class="cat-post-excerpt">
                    {{ topPost.content | truncate(200) }}
                </div>
                </div>
            </div>
            <br>
            <div class="cat-items">
                {% for post in posts %}
                    <div class="cat-item-post">
                        <div class="item-thumb">
                            <a href="{{ path('post.show', {id: post.id, slug: post.slug}) }}">
                                {% if post.picture %}
                                    <img src="{{ vich_uploader_asset(post.picture, 'imageFile') | imagine_filter('thumb') }}" alt="" title="{{ post.title }}">
                                {% else %}
                                    <img src="{{ '/images/noimage.png'| imagine_filter('thumb') }}" title="{{ post.title }}"></a>
                                {% endif %}
                            </a>
                        </div>
                        <div class="item-details">
                            <a href=""><h6>{{ post.title }}</h6></a>
                            <span>{{ post.createdAt | date('d F, Y') }}</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
            
            </div>
        </div>
    </div>
    <div class="pub-2">

    </div>
    <br>
{% endblock %}