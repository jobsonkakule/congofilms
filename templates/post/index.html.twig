{% extends "base.html.twig" %}
{% block title 'Voir tous nos biens' %}

{% block body %}
    <div class="container mt-4">
        <h1>Tous les articles</h1>
        <div class="row">
            {% for post in posts %}
                <div class="col-md-4">
                    {% include "post/_post.html.twig" %}
                </div>
            {% endfor %}
        </div>
        <div class="pagination">
                {{ knp_pagination_render(posts) }}
        </div>
    </div>

{% endblock  %}