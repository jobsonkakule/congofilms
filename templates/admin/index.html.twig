{% extends "base.html.twig" %}
{% block title 'Administration | Grands Lacs News' %}

{% block body %}
  <div class="td-category-header mt-0 mb-2">
    <div class="container">
      <br>
      <h1>Dashboard</h1>
    </div>
  </div>
  <div class="container mt-4">
    <div class="row text-center justify-content-center">
      <div class="col-md-3">
        <h1 style="font-weight: 700;font-size: 5rem">{{ nbPosts[0].tot }}</h1>
        <p class="text-muted">Total</p>
        <a href="{{ path('admin.post.index') }}" class="btn btn-primary">
          Gérer les articles
        </a>
      </div>
      <div class="col-md-3">
        <h1 style="font-weight: 700;font-size: 5rem">{{ nbTags }}</h1>
        <p class="text-muted">Total</p>
        <a href="{{ path('admin.tag.index') }}" class="btn btn-primary">
          Gérer les Tags non utilisés
        </a>
      </div>
      {% if is_granted('ROLE_ADMIN') %}
        <div class="col-md-3">
          <h1 style="font-weight: 700;font-size: 5rem">{{ nbCategories[0].tot }}</h1>
          <p class="text-muted">Total</p>
          <a href="{{ path('admin.category.index') }}" class="btn btn-primary">
            Gérer les catégories
          </a>
        </div>
      {% endif %}
      {% if is_granted('ROLE_SUPER_ADMIN') %}
        <div class="col-md-3">
          <h1 style="font-weight: 700;font-size: 5rem">{{ nbPubs[0].tot }}</h1>
          <p class="text-muted">Total</p>
          <a href="{{ path('admin.pub.index') }}" class="btn btn-primary">
            Gérer les publicités
          </a>
        </div>
        <div class="col-md-3">
          <h1 style="font-weight: 700;font-size: 5rem">{{ nbUsers[0].tot }}</h1>
          <p class="text-muted">Total</p>
          <a href="{{ path('admin.user.index') }}" class="btn btn-primary">
            Gérer les utilisateurs
          </a>
        </div>
      {% endif %}
    </div>
  </div>
  <br>
{% endblock  %}