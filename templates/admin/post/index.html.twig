{% extends "base.html.twig" %}
{% block title 'Dashboard' %}

{% block body %}
    <div class="container mt-4">
        <h1>Gérer les articles</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="text-right">
            <a href="{{ path('admin.post.new') }}" class="btn btn-primary">Ajouter un article</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Vues</th>
                    <th>Tags</th>
                    <th>Actions</th>
                </tr>
                <tbody>
                    {% for post in posts %}
                        <tr>
                            <td>{{ post.title }}</td>
                            <td>{{ post.views }}</td>
                            <td>
                                {% for tag in post.tags %}
                                    <a href="{{ path('admin.post.index') }}?tag={{ tag }}">{{ tag }}</a>
                                {% endfor %}
                            </td>
                            <td>
                                <a href="{{ path('admin.post.edit', {id: post.id}) }}" class="btn btn-secondary">Editer</a>
                                <form method="post" action="{{ path('admin.post.delete', {id: post.id}) }}" style="display: inline-block;" onsubmit="return confirm('Etes-vous vraiment sûr ?')">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                                    <button class="btn btn-danger">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </thead>
        </table>
        <br>
        <div class="pagination">
                {{ knp_pagination_render(posts) }}
        </div>
    </div>
{% endblock  %}